        "title": "Вкладка 3",
        "content": "<div class="base64-converter">
    <div class="converter-section">
        <textarea id="inputText" placeholder="Введите текст здесь..." class="text-area"></textarea>
        <div class="button-group">
            <button onclick="encodeBase64()" class="btn">Закодировать</button>
            <button onclick="decodeBase64()" class="btn">Декодировать</button>
            <button onclick="clearFields()" class="btn clear">Очистить</button>
        </div>
        <textarea id="outputText" readonly placeholder="Результат появится здесь..." class="text-area"></textarea>
    </div>
</div>

<style>
.base64-converter {
    padding: 20px;
    max-width: 800px;
    margin: 0 auto;
}

.converter-section {
    display: flex;
    flex-direction: column;
    gap: 15px;
}

.text-area {
    width: 100%;
    height: 150px;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 6px;
    resize: vertical;
    font-family: monospace;
    font-size: 14px;
}

.button-group {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
}

.btn {
    padding: 10px 20px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    background-color: #007bff;
    color: white;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #0056b3;
}

.btn.clear {
    background-color: #dc3545;
}

.btn.clear:hover {
    background-color: #bb2d3b;
}

@media (max-width: 768px) {
    .button-group {
        flex-direction: column;
    }
    
    .btn {
        width: 100%;
    }
}
</style>

<script>
function encodeBase64() {
    const input = document.getElementById('inputText').value;
    try {
        const encoded = btoa(unescape(encodeURIComponent(input)));
        document.getElementById('outputText').value = encoded;
    } catch (e) {
        alert('Ошибка кодирования: ' + e.message);
    }
}

function decodeBase64() {
    const input = document.getElementById('inputText').value;
    try {
        const decoded = decodeURIComponent(escape(atob(input)));
        document.getElementById('outputText').value = decoded;
    } catch (e) {
        alert('Ошибка декодирования: Некорректные Base64 данные');
    }
}

function clearFields() {
    document.getElementById('inputText').value = '';
    document.getElementById('outputText').value = '';
}
</script>"

        
    }
