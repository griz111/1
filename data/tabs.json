        <div class="container">
    <h1>Base64 Encoder/Decoder</h1>
    
    <div class="tool-container">
        <div class="input-group">
            <label for="input">Исходный текст:</label>
            <textarea id="input" placeholder="Введите текст здесь..."></textarea>
        </div>
        
        <div class="input-group">
            <label for="output">Результат:</label>
            <textarea id="output" readonly placeholder="Результат появится здесь..."></textarea>
        </div>
    </div>

    <div class="controls">
        <button onclick="encode()">Закодировать</button>
        <button onclick="decode()">Декодировать</button>
        <button onclick="clearFields()">Очистить</button>
    </div>
</div>

<style>
:root {
    --primary-color: #4CAF50;
    --background: #f0f0f0;
}

* {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

body {
    font-family: Arial, sans-serif;
    background: var(--background);
    padding: 20px;
}

.container {
    max-width: 1000px;
    margin: 0 auto;
}

h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
}

.tool-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 20px;
}

.input-group {
    display: flex;
    flex-direction: column;
}

label {
    margin-bottom: 10px;
    font-weight: bold;
    color: #555;
}

textarea {
    width: 100%;
    height: 200px;
    padding: 15px;
    border: 2px solid #ddd;
    border-radius: 8px;
    resize: vertical;
    font-size: 14px;
}

textarea:focus {
    outline: none;
    border-color: var(--primary-color);
}

.controls {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
}

button {
    padding: 12px 25px;
    border: none;
    border-radius: 5px;
    background-color: var(--primary-color);
    color: white;
    cursor: pointer;
    transition: background 0.3s ease;
}

button:hover {
    background-color: #45a049;
}

@media (max-width: 768px) {
    .tool-container {
        grid-template-columns: 1fr;
    }
    
    textarea {
        height: 150px;
    }
}
</style>

<script>
function encode() {
    const input = document.getElementById('input').value;
    try {
        const encoded = btoa(unescape(encodeURIComponent(input)));
        document.getElementById('output').value = encoded;
    } catch (e) {
        document.getElementById('output').value = "Ошибка кодирования!";
    }
}

function decode() {
    const input = document.getElementById('input').value;
    try {
        const decoded = decodeURIComponent(escape(atob(input)));
        document.getElementById('output').value = decoded;
    } catch (e) {
        document.getElementById('output').value = "Ошибка декодирования! Проверьте ввод";
    }
}

function clearFields() {
    document.getElementById('input').value = '';
    document.getElementById('output').value = '';
}

// Обработчики для быстрых клавиш
document.addEventListener('keydown', (e) => {
    if (e.ctrlKey && e.key === 'Enter') encode();
    if (e.shiftKey && e.key === 'Enter') decode();
});
</script>
